if [ $(uname) == 'Darwin' ]; then
	export EDITOR=/Applications/VimR.app/Contents/Resources/vimr
else
	export EDITOR=nvim
fi

if [ -z "$XDG_CONFIG_HOME" ]; then
	export XDG_CONFIG_HOME="$HOME/.config"
	export XDG_DATA_HOME="$HOME/.local/share"
	export XDG_CACHE_HOME="$HOME/.cache"
fi

NPM_PACKAGES="${XDG_DATA_HOME}/node_modules"

export MANPATH="$XDG_DATA_HOME/man:$MANPATH"
export MANPATH="$NPM_PACKAGES/share/man:$MANPATH"

export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME/npm/config"

export PATH=~/.local/bin:$PATH
export PATH=~/.luarocks/bin:$PATH
export PATH="node_modules/.bin:$NPM_PACKAGES/bin:$PATH"

shopt -s cmdhist # Use one command per line
export HISTCONTROL=erasedups:ignorespace
export HISTIGNORE='bg:exit:fg:history'
export HISTFILESIZE=1000
export HISTSIZE=1000
export PROMPT_COMMAND='history -a' # Immediately store comands
