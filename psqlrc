\set QUIET on
\pset border 2
\pset linestyle unicode
\pset null '(null)'
\pset pager off
\set HISTFILE ~/.cache/psql_history/:DBNAME
\set PROMPT1 '%[%033[1;35m%]user%[%033[0m%] %[%033[1;33m%]%n%[%033[0m%] %[%033[1;35m%]in database%[%033[0m%] %[%033[1;32m%]%/%[%033[0m%] \n%[%033[1;34m%]↳%[%033[0m%] '
\set PROMPT2 '%[%033[1;34m%]…%[%033[0m%] '
\set VERBOSITY verbose
\timing
\x auto
\unset QUIET
