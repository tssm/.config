[core]
	pager = diffr --colors refine-added:foreground:black --colors refine-removed:foreground:black | $PAGER
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[interactive]
	diffFilter = diffr --colors refine-added:foreground:black --colors refine-removed:foreground:black | $PAGER
[merge]
	tool = vimdiff
[mergetool]
	conflictStyle = diff3
	keepBackup = false
	prompt = false
[push]
	default = simple
